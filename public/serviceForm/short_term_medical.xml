			<mandatory>yes</mandatory>
			<blankoption>Select State</blankoption>
			<select_stmt>select state_id as id, state_code, state_name value from states where isactive = 'Y' ORDER BY state_name ASC</select_stmt>
		</element>
		<element>
			<type>text</type>
			<name>service_req_short_medical[hospital_district]</name>
			<label>District</label>
			<size>large</size>
			<mandatory>yes</mandatory>
		</element>
		<element>
			<type>text</type>
			<name>service_req_short_medical[hospital_phone_no]</name>
			<label>Phone no</label>
			<size>large</size>
			<mandatory>yes</mandatory>
			<onlynumber>yes</onlynumber>
			<!-- <placeholder></placeholder> -->
			<!-- <additional>Some more text that helps filling this field</additional> -->
		</element>
		<element>
			<type>text</type>
			<name>service_req_short_medical[type_of_medical]</name>
