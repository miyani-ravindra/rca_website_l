		<element>
			<type>text</type>
			<name>service_req_short_medical[hospital_name]</name>
			<label>Name of the Hospital where Medical treatment is to be carried out</label>
			<size>large</size>
			<mandatory>yes</mandatory>
			<!-- <placeholder></placeholder> -->
			<!-- <additional>Some more text that helps filling this field</additional> -->
		</element>

		<element>
			<type>text</type>
			<name>service_req_short_medical[hospital_address]</name>
			<label>Address of Hospital</label>
			<size>large</size>
			<mandatory>yes</mandatory>
			<!-- <placeholder>Pre initialised text...</placeholder> -->
		</element>
